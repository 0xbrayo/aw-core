{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Event",
	"description": "Basic event for ActivityWatch",
	"type": "object",
	"properties": {
        "note": {"type": "string"},
		"timestamp": {
            "type": ["string", "array"],
            "format": "date-time",
            "items": {
                "type": "string",
                "format": "date-time"
            },
            "minItems": 1
		},
		"duration": {
			"type": "object",
			"properties": {
				"value": {
					"type": "number"
				},
				"unit": {
					"enum": ["seconds"]
				}
			},
			"required": ["value", "unit"]
		},
		"distance": {
			"type": "object",
			"properties": {
				"value": {
					"type": "number"
				},
				"unit": {
					"enum": ["meter", "kilometer", "miles", "feet", "inches", "lightyears", "au"]
				}
			},
			"required": ["value", "unit"]
		},
		"temperature": {
			"type": "object",
			"properties": {
				"value": {
					"type": "number"
				},
				"unit": {
					"enum": ["kelvin", "celcius", "fahrenheit"]
				}
			},
			"required": ["value", "unit"]
		},
		"age": {
			"description": "Age in years",
			"type": "integer",
			"minimum": 0
		}
	}
}
